---
import { Icons } from './Icons';

interface Props {
  name: keyof typeof Icons;
  label?: string;
  color?: string;
  size?: string;
  class?: string;
  title?: string;
}

const { name, label, size = '1em', color, title } = Astro.props;
const a11yAttrs = label ? ({ 'aria-label': label } as const) : ({ 'aria-hidden': 'true' } as const);
---

<svg
  {...a11yAttrs}
  class={Astro.props.class}
  viewBox="0 0 24 24"
  fill="currentColor"
  set:html={Icons[name]}
>
  <title>{title}</title>
</svg>

<style define:vars={{ 'sl-icon-color': color, 'sl-icon-size': size }}>
  svg {
    color: var(--sl-icon-color);
    font-size: var(--sl-icon-size, 1em);
    width: 1em;
    height: 1em;
  }
</style>
